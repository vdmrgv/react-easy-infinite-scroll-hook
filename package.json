{
  "name": "react-easy-infinite-scroll-hook",
  "version": "1.10.4",
  "license": "MIT",
  "description": "A react hook for creating simple, fast and lightweight components with infinite scrolling in any direction, supporting both windowed and scrollable elements.",
  "author": "Vadim Rogov <vadimrogovd@gmail.com>",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "files": [
    "dist"
  ],
  "typings": "dist/index.d.ts",
  "scripts": {
    "prepare": "husky install",
    "build": "rimraf dist && rollup -c",
    "lint": "eslint 'src/**/*.{ts,tsx,js,jsx}'",
    "lint:fix": "yarn lint --fix",
    "prettier:check": "prettier --check 'src/**/*'",
    "prettify": "prettier --write 'src/**/*'",
    "ts-check": "tsc -p tsconfig.json --noEmit",
    "test": "jest",
    "test:coverage": "yarn test --coverage"
  },
  "lint-staged": {
    "*.{js,json,md}": [
      "prettier --write",
      "git add"
    ],
    "*.js": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/vdmrgv/react-easy-infinite-scroll-hook.git"
  },
  "keywords": [
    "react",
    "react-hooks",
    "react infinite scroll",
    "react infinite scroll hook",
    "useInfiniteScroll",
    "infinite-scroll",
    "scrolling",
    "infinite",
    "scroll",
    "react-component",
    "flex",
    "flexbox",
    "list",
    "grid",
    "react-virtualized"
  ],
  "bugs": {
    "url": "https://github.com/vdmrgv/react-easy-infinite-scroll-hook/issues"
  },
  "homepage": "https://vdmrgv.github.io/react-easy-infinite-scroll-hook",
  "devDependencies": {
    "@babel/core": "^7.19.3",
    "@babel/preset-env": "^7.19.1",
    "@babel/preset-react": "^7.17.12",
    "@babel/preset-typescript": "^7.18.6",
    "@rollup/plugin-babel": "^5.3.1",
    "@rollup/plugin-commonjs": "^22.0.2",
    "@rollup/plugin-node-resolve": "^14.1.0",
    "@rollup/plugin-typescript": "^8.5.0",
    "@testing-library/react": "^13.4.0",
    "@types/jest": "^29.0.3",
    "@types/react": "^18.0.20",
    "@typescript-eslint/eslint-plugin": "^5.37.0",
    "@typescript-eslint/parser": "^5.37.0",
    "babel-jest": "^29.0.3",
    "eslint": "^8.23.1",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.31.8",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.1",
    "jest": "^29.0.3",
    "jest-environment-jsdom": "^29.0.3",
    "lint-staged": "^13.0.2",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.79.0",
    "rollup-plugin-dts": "^4.2.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-terser": "^7.0.2",
    "tslib": "^2.4.0",
    "typescript": "^4.8.3"
  },
  "peerDependencies": {
    "react": "^16.8.0 || ^17.0.0 || ^18.0.0"
  }
}
